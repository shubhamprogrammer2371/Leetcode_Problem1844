char * replaceDigits(char * s){
    for( int i = 1 ; i < strlen(s) ; i += 2)
        s[i] = s[i-1] + (s[i]-'0');        
    return s;
}


------------------------------------------------------------


char * replaceDigits(char * s){
    for (int i = 1; i < strlen(s); i+= 2)
        s[i] = (char)(int)s[i-1] + (int)s[i] - 48; // 48 is the ASCII Code for '0'
    return s;
}
